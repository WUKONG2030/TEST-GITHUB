/**app.wxss**/
page {
  --primary-color: #1296db;
  --text-color: #333333;
  --background-color: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: var(--background-color);
}

.card {
  width: 100%;
  background: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: bold;
  margin-bottom: 16rpx;
}

.btn {
  background-color: var(--primary-color);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  margin: 20rpx 0;
} 